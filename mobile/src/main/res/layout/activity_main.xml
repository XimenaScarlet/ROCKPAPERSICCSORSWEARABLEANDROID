<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===== MENÃš INICIAL (pantalla tipo mockup bonito pastel) ===== -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_menu_gradient"
        android:padding="24dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Piedra\nPapel Tijera"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2A2A2A" />

        <TextView
            android:id="@+id/txtMenuSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mini juego entre tu telÃ©fono y el reloj"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#88555555"
            android:layout_marginTop="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/menuButtonsContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:padding="8dp">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:text="â–¶ Play"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:textColor="#333333" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:text="âš™ ConfiguraciÃ³n"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:textColor="#333333" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />
    </LinearLayout>

    <!-- ===== JUEGO ===== -->
    <LinearLayout
        android:id="@+id/gameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#1C1C1C"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Piedra Â· Papel Â· Tijera"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- 3 columnas tipo juego -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#4CAF50">

                <TextView
                    android:text="âœŠ"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#F44336">

                <TextView
                    android:text="ðŸ“„"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#2196F3">

                <TextView
                    android:text="âœ‚ï¸"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando al relojâ€¦"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botones de jugada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="4dp">

            <Button
                android:id="@+id/btnRock"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Piedra"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button_dark"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnPaper"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="Papel"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button_dark"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnScissors"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Tijera"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Jugar de nuevo"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- ===== CONFIGURACIÃ“N ===== -->
    <LinearLayout
        android:id="@+id/settingsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        android:background="#1C1C1C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ConfiguraciÃ³n"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnTheme"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cambiar tema"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnBackSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Volver"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textColor="#333333"/>
    </LinearLayout>

</LinearLayout>
